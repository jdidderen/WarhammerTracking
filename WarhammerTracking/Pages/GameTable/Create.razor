@page "/gametable/add"
@attribute [Authorize(Roles = "User,Admin")]
@inherits CreateGameTable

<h1>@L.GetLocalization("GameTables") - @L.GetLocalization("Add")</h1>

<div class="shadow-lg rounded form-box">
    <div class="row">
        <div class="col-md-12">
            <EditForm Model="GameTable" OnSubmit="@FormSubmit">
                <DataAnnotationsValidator/>
                <ValidationSummary/>
                <div class="form-group form-inline">
                    <label for="Name">@L.GetLocalization("Name")</label>
                    <h1>
                        <InputText id="Name" @bind-Value="@GameTable.Name"/>
                    </h1>
                </div>
                <div class="form-group form-inline">
                    <label for="ImageFile">@L.GetLocalization("file") (PNG,JPEG)</label>
                    <InputFile id="ImageFile" OnChange="HandleFileSelected" />
                </div>
                <button class="btn btn-primary" type="submit">@L.GetLocalization("Submit")</button>
                <input type="button" value="@L.GetLocalization("Cancel")" @onclick="Cancel" class="btn btn-secondary"/>
            </EditForm>
        </div>
    </div>
</div>