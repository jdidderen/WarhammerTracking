@page "/gamerequest"
@attribute [Authorize(Roles = "User,Admin")]
@inherits ListGameRequest
<h1>@L.GetLocalization("GameRequests")</h1>
<div class="shadow-lg rounded form-box">
    <div class="col-md-12">
        <div class="row" style="margin-bottom: 10px;">
            <a href="/gamerequest/add" class="btn btn-primary">@L.GetLocalization("Add")</a>
        </div>
        <div class="row">
            <DataGrid  Items="@GameRequests" TItem="Data.Models.GameRequest" PageSize="5">
                <Filters>
                    <DataGridFilter Name="@L.GetLocalization("Reset")" Expression="@ResetFilter"></DataGridFilter>
                    <DataGridFilter Name="@L.GetLocalization("OthersRequestFilter")" Expression="@AllFilter"></DataGridFilter>
                    <DataGridFilter Name="@L.GetLocalization("MyFilter")" Expression="@MyFilter"></DataGridFilter>
                    <DataGridFilter Name="@L.GetLocalization("ExpiredFilter")" Expression="@ExpiredFilter"></DataGridFilter>
                </Filters>
                <Column>
                    <DataGridColumn TItem="Data.Models.GameRequest" ColumnName="Date" DisplayColumnName="@L.GetLocalization("Date")"></DataGridColumn>
                    <DataGridColumn TItem="Data.Models.GameRequest" ColumnName="PlayerUserName" DisplayColumnName="@L.GetLocalization("Player")"></DataGridColumn>
                    <DataGridColumn TItem="Data.Models.GameRequest" ColumnName="Expired" DisplayColumnName="@L.GetLocalization("Expired")"></DataGridColumn>
                    <th>@L.GetLocalization("Actions")</th>
                </Column>
                <GridRow >
                    <td>@context.Date.ToString("dd/MM/yyyy")</td>
                    <td>@context.PlayerUserName</td>
                    <td>
                        <input type="checkbox" @bind="@context.Expired" disabled/>
                               </td>
                               <td>
                                   <a href="/gamerequest/detail/@context.Id" class="btn btn-primary">@L.GetLocalization("Detail")</a>
                                   <a href="/gamerequest/edit/@context.Id" class="btn btn-primary">@L.GetLocalization("Edit")</a>
                                   <a href="/gamerequest/delete/@context.Id" class="btn btn-danger">@L.GetLocalization("Delete")</a>
                               </td>
                               </GridRow>
                               </DataGrid>
                               </div>
                               </div>
                               </div>
                               }