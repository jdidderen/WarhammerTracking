@page "/objective/detail/{id:int}"
@attribute [Authorize(Roles = "User,Admin")]
@inherits DetailObjective

<h1>@L.GetLocalization("Objectives") - @L.GetLocalization("Detail")</h1>
<div class="shadow-lg rounded form-box">
    <div class="row">
        <div class="col-md-12">
            <EditForm Model="Objective">
                <DataAnnotationsValidator/>
                <ValidationSummary/>
                <div class="form-group form-inline">
                    <label for="Title">@L.GetLocalization("Title")</label>
                    <h1>
                        <InputText id="Title" @bind-Value="@Objective.Title" disabled/>
                    </h1>
                </div>
                <div class="form-group form-inline">
                    <label for="Date">@L.GetLocalization("Date")</label>
                    <InputDate id="Date" @bind-Value="@Objective.Date" disabled/>
                    <label style="margin-left: 30px;" for="Done">@L.GetLocalization("Done")</label>
                    <InputCheckbox id="Done" class="form-control" @bind-Value="@Objective.Done" disabled/>
                    <label style="margin-left: 30px;" for="Player">@L.GetLocalization("Player")</label>
                    <InputText id="Player" class="form-control" @bind-Value="@Objective.Player.UserName" disabled/>
                </div>
                <div class="form-group form-inline">
                    <label for="Description">@L.GetLocalization("Description")</label>
                    <InputTextArea id="Description" @bind-Value="@Objective.Description" disabled/>
                </div>
            </EditForm>
        </div>
    </div>
</div>                                                                                             