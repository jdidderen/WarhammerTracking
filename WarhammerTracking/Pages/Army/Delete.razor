@page "/army/delete/{id:int}"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Mvc.Routing
@using WarhammerTracking.Data.Army
@attribute [Authorize(Roles = "User,Admin")]
@inject ArmyDataAccessProvider ArmyDataAccessProvider
@inject NavigationManager NavigationManager

<h1>Armies - Delete</h1>
<div class="alert alert-danger" role="alert">
Are you sure you want to delete this army ?
</div>

<div class="shadow-lg rounded form-box">
<div class="row">
    <form>
        <div class="form-group">
            <label for="Id">Id</label>
            <input for="Id" readonly="1" class="form-control" @bind-value="@army.id"/>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input for="Name" readonly="1" class="form-control" @bind-value="@army.name"/>
        </div>
        <div class="form-group">
            <input type="button" value="Delete" @onclick="DeleteArmy" class="btn btn-primary"/>
            <input type="button" value="Cancel" @onclick="Cancel" class="btn btn-secondary"/>
        </div>
    </form>
</div>
</div>
@code {
    [Parameter]
    public int id { get; set; }
    
    Army army;

    protected override async Task OnInitializedAsync()
    {
        army = await ArmyDataAccessProvider.GetArmy(id);
    }

    private void DeleteArmy()
    {
        ArmyDataAccessProvider.DeleteArmy(army.id);
        NavigationManager.NavigateTo("army");
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("army");
    }

}