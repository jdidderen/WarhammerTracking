@page "/army/delete/{id:int}"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Mvc.Routing
@using WarhammerTracking.Data.Army
@attribute [Authorize(Roles = "User,Admin")]
@inject ArmyDataAccessProvider ArmyDataAccessProvider
@inject NavigationManager NavigationManager

<h1>Armies - Delete</h1>
<div class="alert alert-danger" role="alert">
Are you sure you want to delete this army ?
</div>

<div class="shadow-lg rounded form-box">
<div class="row">
    <EditForm Model="army" OnSubmit=@FormSubmit>
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group form-inline">
            <label for="Name">Name</label>
            <InputText id="Name" @bind-Value="army.name" disabled/>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <input type="button" value="Cancel" @onclick="Cancel" class="btn btn-secondary"/>
    </EditForm>
</div>
</div>
@code {
    [Parameter]
    public int id { get; set; }
    
    Army army;

    protected override async Task OnInitializedAsync()
    {
        army = await ArmyDataAccessProvider.GetArmy(id);
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("army");
    }
    
    private async void FormSubmit(EditContext editContext)
    {
        if (editContext.Validate())
        {
            Console.WriteLine("Success");
            await ArmyDataAccessProvider.DeleteArmy(army.id);
            NavigationManager.NavigateTo("army");
        }
        else
        {
            Console.WriteLine("Fail");
        }
    }

}