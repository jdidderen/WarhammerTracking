@using System.Linq.Expressions
@typeparam TItem

<input type="button" class="btn btn-dark" @onclick="@(() => CallParent())" value="@Name"/>

       @code {

           [CascadingParameter]
           public DataGrid<TItem> DataGrid { get; set; }

           [Parameter]
           public Expression<Func<TItem, bool>> Expression { get; set; }

           [Parameter]
           public string Name { get; set; }

           private void CallParent()
           {
               DataGrid.SetFilters(Expression);
           }

       }